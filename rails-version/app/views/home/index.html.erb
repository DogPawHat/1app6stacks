<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold text-center mb-8">Vote for which is roundest</h1>

  <div class="flex justify-center gap-16 items-center min-h-[80vh]">
    <% @pokemon_pair.each do |pokemon| %>
      <div class="flex flex-col items-center gap-4">
        <%= image_tag pokemon.sprite, alt: pokemon.name, class: "w-64 h-64 sprite" %>
        <div class="text-center">
          <span class="text-gray-500 text-lg">#<%= pokemon.id %></span>
          <h2 class="text-2xl font-bold capitalize"><%= pokemon.name %></h2>
          <%= button_to vote_path, 
              params: { winner_id: pokemon.id, loser_id: (@pokemon_pair - [pokemon]).first.id }, 
              method: :post,
              class: "mt-4 px-8 py-3 bg-blue-500 text-white rounded-lg text-lg font-semibold hover:bg-blue-600 transition-colors" do %>
            Vote
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "See Results", 
      results_pokemons_path, 
      class: "block text-center mt-8 text-blue-500 hover:text-blue-600" %>
</div>